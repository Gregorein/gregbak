{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "util/*": ["util/*"],
      "theme/*": ["theme/*"],
      "assets/*": ["assets/*"],
      "icons/*": ["assets/icons/*"],
      "images/*": ["assets/images/*" ],
      "types/*": ["types/*"],
      "queries/*": ["queries/*"],
      "views/*": ["views/*"]
    },
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "node_modules/@types/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
